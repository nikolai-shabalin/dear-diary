<style>
    /* Плавающая ссылка на GitHub - Mobile First */
    .github-link {
        position: fixed;
        bottom: 1rem;
        right: 1rem;
        width: 3rem;
        height: 3rem;
        background: #1f2937;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: var(--shadow-lg);
        transition: all 0.3s ease;
        z-index: 1000;
        text-decoration: none;
        color: white;
        -webkit-tap-highlight-color: transparent;
    }

    .github-link:hover {
        background: #111827;
        transform: translateY(-2px) scale(1.05);
        box-shadow: 0 8px 25px rgba(31, 41, 55, 0.3);
    }

    .github-link:active {
        transform: translateY(0) scale(1);
    }

    .github-link__icon {
        width: 1.5rem;
        height: 1.5rem;
        fill: currentColor;
    }

    /* Планшеты */
    @media (min-width: 768px) {
        .github-link {
            width: 3.5rem;
            height: 3.5rem;
            bottom: 1.5rem;
            right: 1.5rem;
        }

        .github-link__icon {
            width: 1.75rem;
            height: 1.75rem;
        }
    }

    /* Десктопы */
    @media (min-width: 1024px) {
        .github-link {
            width: 4rem;
            height: 4rem;
            bottom: 2rem;
            right: 2rem;
        }

        .github-link__icon {
            width: 2rem;
            height: 2rem;
        }
    }

    /* Очень маленькие экраны */
    @media (max-width: 320px) {
        .github-link {
            width: 2.5rem;
            height: 2.5rem;
            bottom: 0.75rem;
            right: 0.75rem;
        }

        .github-link__icon {
            width: 1.25rem;
            height: 1.25rem;
        }
    }
</style>
